# Database
POSTGRES_PASSWORD=secure_random_password_here
DATABASE_URL=postgresql://nexwave:${POSTGRES_PASSWORD}@postgres:5432/nexwave

# Redis
REDIS_URL=redis://redis:6379

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Pacifica
PACIFICA_API_URL=https://api.pacifica.fi/api/v1
PACIFICA_WS_URL=wss://ws.pacifica.fi/ws
PACIFICA_API_KEY=<your_api_key>
PACIFICA_AGENT_WALLET_PUBKEY=<your_public_key>
PACIFICA_AGENT_WALLET_PRIVKEY=your_agent_wallet_private_key

# Trading Parameters
SYMBOLS=BTC,ETH,BNB,SOL,ZEC
WHALE_THRESHOLD_USD=25000
MAX_POSITION_SIZE_USD=1000000
MAX_LEVERAGE=5
DAILY_LOSS_LIMIT_PCT=5

# Alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT_PER_MINUTE=100

# Monitoring
GRAFANA_PASSWORD=admin
LOG_LEVEL=INFO
ENVIRONMENT=development

# Agent strategy overrides (optional). If set, GET/PATCH /api/v1/strategy-config write here; trading engine reloads every 60s.
# AGENT_OVERRIDES_PATH=/var/www/pacifica-operator/config/agent_strategy_overrides.json

# Service-specific
BATCH_SIZE=5000
WRITE_INTERVAL_SEC=5
CORS_ORIGINS=*

# Whale Tracker Service
WHALE_DETECTION_INTERVAL=5
DISCORD_WEBHOOK=

# Trading Engine Service
STRATEGY=volume_weighted_momentum
STRATEGY_ID=vwm_momentum_1
PORTFOLIO_VALUE=100000

# Order Management Service
# Note: Set PAPER_TRADING=false for real trading (requires wallet keys)

# VWM Strategy Parameters (SCALPING - Pacifica Operator default)
# Tuned for high frequency, quick holds; Baddie Quant remains swing/long-term.
VWM_TIMEFRAME=5m               # 5m candles for scalping (1m/5m/15m/1h/4h/1d)
VWM_MOMENTUM_THRESHOLD=0.001   # 0.1% - Tight entry trigger
VWM_EXIT_THRESHOLD=0.0005      # 0.05% - Exit when momentum fades
VWM_VOLUME_MULTIPLIER=2.0      # 2x - Volume confirmation for scalping
VWM_LOOKBACK_PERIOD=12         # 12 candles (e.g. 1h on 5m)
VWM_BASE_POSITION_PCT=1.0      # 1% base - Conservative for frequency
VWM_MAX_POSITION_PCT=5.0       # 5% max
VWM_STOP_LOSS_ATR_MULTIPLIER=1.5   # 1.5x ATR stop
VWM_TAKE_PROFIT_ATR_MULTIPLIER=2.5 # 2.5x ATR target
# Cooldown: 300s (5 min) between trades - set via trade_cooldown_seconds in strategy-config

# Volatility-Adjusted Profit Taking (optional overrides)
VWM_TP_MIN_ATR_MULTIPLE=2.0
VWM_TP_MAX_ATR_MULTIPLE=6.0
VWM_TP_VOLATILITY_THRESHOLD=0.015
VWM_TP_MIN_PROFIT_PCT=1.0
VWM_TP_MAX_PROFIT_PCT=5.0

